+// Temporary compatibility shim for Hugo module builds.
+//
+// The upstream theme imports `vendor/rfs` from Bootstrap's Sass sources.
+// Go module packaging strips `vendor/` directories, so the original file is
+// missing when the theme is fetched as a Hugo module.
+//
+// This shim preserves the expected public API so Bootstrap mixins compile,
+// while gracefully degrading to fixed (non-fluid) values.
+
+$enable-rfs: true !default;
+$rfs-base-value: 1.25rem !default;
+$rfs-unit: rem !default;
+$rfs-breakpoint: 1200px !default;
+$rfs-factor: 10 !default;
+
+@function rfs-value($values) {
+  @return $values;
+}
+
+@function rfs-fluid-value($values) {
+  @return $values;
+}
+
+@function rfs-suffix($value) {
+  @return null;
+}
+
+@mixin rfs($values, $property: font-size) {
+  @if $enable-rfs {
+    #{$property}: rfs-fluid-value($values);
+  } @else {
+    #{$property}: rfs-value($values);
+  }
+}

